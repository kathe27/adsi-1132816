mixin pet(name)
  li.pet= name
ul
  +pet('Gato')
  +pet('Perro')
  +pet('Cerdo')  

mixin article(title)
  .article
    .article-wrapper
      h1= title
      if block
        block
      else
        p No content provided

+article('Hola mundo')

+article('Hola mundo')
  p Este es mi
  p Asombroso articulo
  
mixin link(href, name)
  
  a(class!=attributes.class, href=href)= name

+link('/foo', 'foo')(class="btn")

mixin link(href, name)
  a(href=href)&attributes(attributes)= name

+link("/foo", "foo")(class="btn")

mixin list(id, ...items)
  ul(id=id)
    each item in items
      li= item

+list('mi-lista', 1, 2, 3, 4)
