body
	background-color #3ADCD3
	color #ED8BDC 
	font 16px Arial
section 
	background-color #FFFF80
	border 10px solid  #ED8BDC
	padding 20px
	margin 20px auto
	width 800px 
/* Pseudo Clases para Enlaces */
nav a:link
nav a:visited
	background-color #ED8BDC
	border 4px solid #ED8BDC
	color #FFFF80
	display inline-block
	padding 20px 10px
	text-align center
	text-decoration none
	width 168px
nav a:hover
	background-color #fff 
	border 4px solid #ED8BDC 
	color #ED8BDC
nav a:active
	background-color #8080FF
	border 4px solid #8080FF
	color #fff
/* Pseudo Clase para Elementos de Formulario */
input
	background-color #E9D2FF
	border none
	color #fff
	font-size 1.2em
	display block 	
	outline none
	padding 20px
	width 96%
input:focus
	background-color #9FFF9F
	color black
/* Insertar Contenido Antes-Despues */
div.box::after
div.box::before
	content ''
	position absolute
div.box
	background-color #FF5353
	height 200px
	position relative
	top 0px
	left 0px
	width 200px
div.box::after
	background-color #FB3154
	height 100px
	top 0px
	left 100px
	width 100px
div.box::before
	background-color #FB3154
	height 100px
	top 100px
	left 0px
	width 100px
/* Primera Letra -Primera Linea */
p::first-letter
	color #9FFF9F
	font-weight bolder
	font-size 4em
p::first-line
	color #FB3154
	


	 
	