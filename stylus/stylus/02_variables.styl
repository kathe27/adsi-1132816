
/* Variables */

color-fondo  = #8d2c5f
color-titulo = #f59cc4
fuente-base  = Arial 

grosor-linea = 4px
estilo-linea = dotted
color-linea  = color-titulo

valores-borde = grosor-linea estilo-linea color-linea

/* Cuando la variable tiene el mismo nombre de una propiedad CSS, utilizar $*/
$border = 4px solid #fff

body
	background-color color-fondo
	font-family fuente-base
h1
	color color-titulo
	border-bottom valores-borde
hr 
	border $border
	
section.caja
	background-color #ddd
	height 400px
	margin 20px auto 
	width 800px
	
	
/* Realizar operaciones con los valores de las propiedades, ejemplo (width y height) */
#logo
	background-color color-fondo
	position absolute
	top 50%
	left 50%
	width 150px
	height 80px
	margin-left -(@width / 2)
	margin-top -(@height / 2)
	